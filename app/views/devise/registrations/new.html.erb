
<body data-spy="scroll" data-target="#main-nav" id="home">
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top" id="main-nav">
    <div class="container">
      <%= link_to "AirbnBeer", root_path, class: 'navbar-brand' %>
      <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item x1">
            <%= link_to "Beers", products_path, class: 'nav-link' %>
      </li>
          </li>
          <li class="nav-item x1">
            <%= link_to "Sign Up", new_user_registration_path, class: 'nav-link' %>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- HOME SECTION -->
  <header id="home-section2">
    <div class="dark-overlay">
      <div class="home-inner container">
        <div class="row">
          <div class="col-lg-8 d-none d-lg-block">
            <h1 class="display-4">
              Wow! New member!!
            </h1>
            <div class="d-flex">
              <div class="p-4 align-self-start">
                <i class="fas fa-beer fa-2x"></i>
              </div>
              <div class="p-4 align-self-end">
                We are very happy, but not because we are about to have a new member, but because we're drunk
              </div>
            </div>

            <div class="d-flex">
              <div class="p-4 align-self-start">
                <i class="fas fa-flag-checkered fa-2x"></i>
              </div>
              <div class="p-4 align-self-end">
                Participate in our weekly drunk F1 Racing Championship
              </div>
            </div>

            <div class="d-flex">
              <div class="p-4 align-self-start">
                <i class="fas fa-bed fa-2x"></i>
              </div>
              <div class="p-4 align-self-end">
                I told you, this is not the Airbnb and we don't know where you live
              </div>
            </div>
          </div>

          <div class="col-lg-4">
            <div class="card bg-warning text-center card-form">
              <div class="card-body">
                <h3>Sign Up</h3>
                <p>Are you Drunk? Note down your password</p>
                  <div class="form-group">
                    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= f.error_notification %>
                      <%= f.input :email,
                          required: true,
                          placeholder: 'Email',
                          label: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
                    </div>
                    <div class="form-group">
                      <%= f.input :password,
                            required: true,
                            placeholder: 'Password',
                            label: false,
                            hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)%>
                    </div>
                    <div class="form-group">
                      <%= f.input :password_confirmation,
                          required: true,
                          placeholder: 'Password Confirmation',
                          label: false,
                          input_html: { autocomplete: "new-password" } %>
                      </div>
                  <div>
                  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                  </div>
                  <%= f.button :submit, "Sign up", class: "btn btn-outline-light btn-block"%>
                  <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>


  <section id="beer-head-section2">
    <div class="container">
      <div class="row">
        <div class="col text-center py-5">
          <h1 class="display-4">Age 9+</h1>
          <p class="lead">If you can carry a six-pack, you can drink!
          </p>
          <%= link_to "Beers", products_path, class: 'btn btn-warning' %>
      </li>
        </div>
      </div>
    </div>
  </section>

</body>

</html>
