<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path 'beer-banner.jpg' %>);">
  <div class="container">
    <h1>Airbnbeer</h1>
    <p>The best place to buy and sell craft beer</p>
    <a class="btn btn-flat" href="#">Apply now</a>
  </div>
</div>
<div class= "container login">
<h2 class="login-text">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-warning"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
