<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <br>
      <h1>New Profile</h1>

      <%= simple_form_for(@user) do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :phone_number %>
        <%=# f.input :photo, as: :file %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>