<div class="container">
  <h2>Beers list</h2>


 <div class='cards'>
    <% @products.each do |beer| %>
      <div class='card'>
        <%= cl_image_tag beer.photo.key, height: 70, width: 70, crop: :fill if beer.photo.attached? %>
        <h4><%= beer.name %></h4>
        <h6>$<%= beer.price %></h6>
        <%= link_to "Details", product_path(beer) %>
      </div>
        <% end %>
  </div>
  <br>
  <%= link_to 'Add beer', new_product_path, class: 'btn btn-warning add-index' %>



  <div id="map"
      style="width: 100%; height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

</div>