<%= render "devise/shared/navbar" %>


<div class="mx-4 mt-5 p-3">

  <div class="row">
    <div class="col-7">
      <div class='cards'>
        <% @products.each do |beer| %>
          <div class='card product-card'>
            <h4><%= link_to beer.name, product_path(beer), class: 'beer-name' %></h4>
            <%= cl_image_tag beer.photo.key, height: 100, width: 100, crop: :fill if beer.photo.attached? %>
            <h6 class='price'>$<%= beer.price %></h6>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-5">
      
        <div id="map"
        style="width: 100%; height: 80vh;", class="mt-2"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      
    </div>
  </div> 

</div>