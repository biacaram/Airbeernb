<div class="container">
  <h2>Products list</h2>
  <table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |beer| %>
      <tr>
        <td><%= beer.name %></td>
        <td><%= beer.description %></td>
        <td><%= beer.price %></td>
        <td><%= link_to 'Show', beer %></td>
      </tr>
    <% end %>
  </tbody>
</table>
