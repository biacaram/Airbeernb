  <%= render "devise/shared/navbar" %>

<div class='container mt-4 mb-4'>
  <h2 class="beer-show-name"><%= @product.name %></h2>
  <br>
  
   <div class="details">
    <%= cl_image_tag @product.photo.key, class: "show-pic", height: 370, width: 300, crop: :fill if @product.photo.attached? %>
    <div class="details-text">
    <h4>Beer description:</h4>
    <h5><%= @product.description %></h5>
    <h4>Un<%= @product.quantity %> </h4>
    <h4>$<%= @product.price %> </h4>
    </div>
   </div>


  <div class="d-flex flex-row">
    <div class="show-btn">
      <% if @product.quantity > 0  %>
        <%= simple_form_for [ @product, @purchase ] do |f| %>
        <div class="form-inputs fields">
          <%= number_field_tag :quantity %>
        </div>
          <div>
            <%= f.button :submit, 'Buy', class: 'btn btn-warning' %>
          </div>
        <% end %>
    </div>
  </div>
    <% else %>
      <div class="alert alert-warning" role="alert">
      This product is sold-out!  
    <% end %>
</div>